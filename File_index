<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>

    <input id="file-upload" type="file" accept=".csv, .zip">
    <label id="file-label" for="file-upload">Choose CSV/ZIP file</label>

    <script>
        // Initially hide the file input element
        const fileInput = document.getElementById('file-upload');
        const fileLabel = document.getElementById('file-label');
        
        fileInput.style.display = 'none';

        // When the label is clicked, trigger the file input click
        fileLabel.addEventListener('click', () => {
            fileInput.click();
        });

        // When a file is selected, change the label text
        fileInput.addEventListener('change', function() {
            const fileName = this.files[0] ? this.files[0].name : 'Choose CSV/ZIP file';
            fileLabel.textContent = fileName;
        });
    </script>

</body>
</html>
